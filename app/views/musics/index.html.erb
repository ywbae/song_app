<%# Navbar %>
<nav id="navbar" class="section">
  <div class="navbar__left">
    <div class="navbar__logo">
      <i class="fas fa-meteor"></i>
    </div>
    <h1 class="navbar__title">PLAYLIST</h1>
    <h3 class="navbar__description">プレイリスト一覧</h3>
  </div>
  <ul class="navbar__right">
    <% if user_signed_in? %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      <%= link_to "投稿する", new_music_path, class: "post" %>
    <% else %>
      <%= link_to "ログイン", new_user_session_path, class: "post" %>
      <%= link_to "新規登録", new_user_registration_path, class: "post" %>
      <%= link_to 'New Music', new_music_path %>
    <% end %>
  </ul>
</nav>

<%# Playlist %>
<section id="playlist" class="section">
  <% @musics.each do |music| %>
  <ul class="iframe-wrap">
    <li class="iframe-wrap-list">
    <iframe width=25% height=25% src="https://www.youtube.com/embed/<%=music.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <%= link_to '詳細', music, class:"playlist__info" %>
    </li>
  </ul>
  <% end %>
</section>

